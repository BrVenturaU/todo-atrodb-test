---
import { TodoStatus } from "@enums/TodoEnums.ts";
interface Props {
  title: string;
  description: string | null;
  status: TodoStatus;
}
const { title, description, status } = Astro.props;
const isActive = status === TodoStatus.ACTIVE;
---

<div
  class:list={[
    "overflow-hidden relative py-2 px-4 rounded shadow hover:bg-gray-50 hover:cursor-pointer after:content-[''] after:absolute after:inset-y-0 after:left-0 after:w-2 after:rounded-bl after:rounded-tl",
    { "after:bg-red-600": isActive },
    { "after:bg-green-600": !isActive },
  ]}
>
  <h3 class="text-xl">{title}</h3>
  <p>{description}</p>
</div>
