---
import TodoForm from '@components/todos/TodoForm.astro'
import TodoList from '@components/todos/TodoList.astro'
import BaseTemplate from "@templates/BaseTemplate.astro"

---

<BaseTemplate pageTitle='Inicio'>
	<div class="flex flex-wrap sm:flex-nowrap">
		<div class="px-4 basis-full sm:basis-1/3">
			<h2 class="text-2xl text-center mb-4">ToDo Form</h2>
			<TodoForm />
		</div>
		<div class="basis-full sm:basis-2/3">
			<h2 class="text-2xl text-center mb-4">ToDos</h2>
			<TodoList />
		</div>
	</div>
</BaseTemplate>